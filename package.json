{
  "name": "myst-spec",
  "version": "0.0.5",
  "description": "MyST schema, testcases, and typescript types",
  "author": "Franklin Koch <franklin@curvenote.com>",
  "homepage": "https://github.com/executablebooks/myst-spec",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "keywords": [
    "markdown",
    "myst",
    "jupyter",
    "jupyter-book"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/executablebooks/myst-spec.git"
  },
  "scripts": {
    "test:run": "tsc -b test",
    "clean": "rimraf src/build test/build dist scripts/build-tests.js",
    "test:compile": "tsc scripts/build-tests.ts  -t esnext -m nodenext",
    "test:prepare": "node ./scripts/build-tests.js",
    "test": "npm-run-all -s test:compile test:prepare test:run",
    "build": "typescript-json-schema 'src/*.ts' 'Root' --titles --tsNodeRegister --required --strictNullChecks --aliasRefs --refs --id https://spec.myst.tools/json-schema/myst.schema.json -o dist/myst.schema.json",
    "lint": "prettier --write src/*.ts" 
  },
  "bugs": {
    "url": "https://github.com/executablebooks/myst-spec/issues"
  },
  "dependencies": {
    "@types/mdast": "^4.0",
    "@types/unist": "^3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "rimraf": "^3.0.2",
    "typescript": "^5.0",
    "typescript-json-schema": "^0.65.1"
  }
}
