{
  "name": "myst-spec",
  "version": "0.0.5",
  "description": "MyST schema, testcases, and typescript types",
  "author": "Franklin Koch <franklin@curvenote.com>",
  "homepage": "https://github.com/executablebooks/myst-spec",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "keywords": [
    "markdown",
    "myst",
    "jupyter",
    "jupyter-book"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/executablebooks/myst-spec.git"
  },
  "scripts": {
    "test:run": "tsc -b test",
    "clean": "rimraf src/build test/build dist scripts/build-tests.js",
    "scripts:build": "tsc -b scripts",
    
    "test:prepare": "node ./bin/build-tests.js",
    "test": "npm-run-all -s scripts:build test:prepare test:run",

    "docs:build-schema": "typescript-json-schema 'src/*.ts' '*' --titles --tsNodeRegister --required --strictNullChecks --aliasRefs --refs --id https://spec.myst.tools/json-schema/myst.schema.json -o dist/myst.schema.json",
    "docs:generate-ast": "node ./bin/build-docs.js -i dist/myst.schema.json -o docs -e docs/examples",
    "docs:prepare": "npm-run-all -p scripts:build docs:build-schema -s docs:generate-ast",
    "lint": "prettier --write src/*.ts"
  },
  "bugs": {
    "url": "https://github.com/executablebooks/myst-spec/issues"
  },
  "dependencies": {
    "@types/mdast": "^4.0",
    "@types/unist": "^3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "remark-parse": "^11.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.0",
    "typescript-json-schema": "^0.65.1",
    "unified": "^11.0.5"
  }
}
